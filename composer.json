{
  "name": "craftix/swoole-logger",
  "description": "A high-performance, asynchronous logger built with PHP and Swoole",
  "type": "library",
  "keywords": ["logger", "logging", "swoole", "php", "asynchronous", "high-performance"],
  "license": "MIT",
  "authors": [
    {
      "name": "Amirreza Mirataollahi",
      "email": "amir.mirataollahi@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-swoole": ">=5.0"
  },
  "autoload": {
    "psr-4": {
      "Craftix\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Craftix\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
